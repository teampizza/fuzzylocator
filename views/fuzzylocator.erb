<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/js/Leaflet/leaflet.css"></>
    <link rel="stylesheet" href="/js/leaflet-sidebar/src/L.Control.Sidebar.css"></>
    <link rel="stylesheet" href="/js/Leaflet.label/dist/leaflet.label.css"></>
    <link rel="stylesheet" href="/css/fuzzylocator.css"></>

    <!-- <script src="./Leaflet/dist/leaflet.js"></script> -->
    <script src="/js/Leaflet.label/libs/leaflet/leaflet-src.js"></script>

    <script src="/js/leaflet-sidebar/src/L.Control.Sidebar.js"></script>

    <script src="/js/leaflet-button/L.Control.Button.js"></script>
    
    <script src="/js/Leaflet.label/src/Label.js"></script>
    <script src="/js/Leaflet.label/src/BaseMarkerMethods.js"></script>
    <script src="/js/Leaflet.label/src/Marker.Label.js"></script>
    <script src="/js/Leaflet.label/src/CircleMarker.Label.js"></script>
    <script src="/js/Leaflet.label/src/Path.Label.js"></script>
    <script src="/js/Leaflet.label/src/Map.Label.js"></script>
    <script src="/js/Leaflet.label/src/FeatureGroup.Label.js"></script>

    <script src="/js/leaflet-tilefilter/dist/TileLayer.Filter.js"></script>

    <script src="/js/html2canvas.js"></script>

    <script src="/js/jquery-2.1.1.min.js"></script>
		<script src="/js/jQuery.print/jQuery.print.js"></script>
		

    <meta charset="utf-8" />
    <title>leaflet / fuzzylocator</title>

  </head>

<body>

  <div id="map"></div>

	<!-- first side pane with map drawing controls -->
  <div id="fuzzymenu">
		<p>
			<button id="darkenbutton" role="button">light</button>
		</p>

    <h1>share info</h1>
    
    <p><strong>location options</strong></p>
		
    <!-- controls -->
		<button id="menubutton" role="button" class="btn btn-primary">menu</button>
		<button id="listbutton" role="button" class="btn btn-primary">share list</button>

		<form action="", method="post">
			
			radius<br>
			
			<div>
				<input name="radius" id="radius" class="slider" type="range" min="100" max="6000000" value="100000" step="100"/> <!-- TODO make logarithmic -->
			</div>
			
			jitter<br>
			
			<div>
				<input id="jitter" class="slider" type="range" min="0" max="1000" value="100" step="1"/>
			</div>
			
			
			color<br>
			
			<div>
				<input name="color" class="slider" id="hueslider" type="range" min="0" max="255" value="100" step="1"/>
			</div>
			
			<div>
				<input id="drawcircle" type="radio" name="grp1" class="css-checkbox" autocomplete="off" /><label for="drawcircle" name="drawlabel" class="css-label radGroup1">Draw Circle</label>
				<input id="delcircle" type="radio" name="grp1" class="css-checkbox" autocomplete="off" /><label for="delcircle" name="dellabel" class="css-label radGroup1">Delete Circle</label>
				<input id="disabletool" type="radio" name="grp1" class="css-checkbox" autocomplete="off" checked="checked"/><label for="disabletool" name="disablelabel" class="css-label radGroup1">View Only</label>
			</div>

			<p><strong>contact info</strong></p>
			
			<div class="form", id="infoform">
				<input type="hidden" id="formlat" name="lat">
				<input type="hidden" id="formlng" name="lng">
				
				Nym: <input type="text" name="nym" id="nym" required><br>
				Contact: <input type="text" name="contact" id="contact" required><br>
				<input type="submit" value="Submit Location+Info"><br>
			</div>
			
		</form>

		<p><strong>export</strong></p>
    <button id="mapdl" type="button">Download Map</button>
    <form action="/csvlist", method="post">
			<button id="infodl" name="infodl" type="submit">Download Info</button>
		</form>
	</div>

	<!-- second side pane which displays list info -->
	<div id="fuzzylist">

		<h1>shared list</h1>
		
		<div id="listpane">
			<!-- is populated by JS -->
			
		</div>
	</div>




	<script src="/js/mapinit.js"></script>
	<script src="/js/fuzzylocator.js"></script>
	<script src="/js/fuzzydatadisp.js"></script>


</body>
</html>
